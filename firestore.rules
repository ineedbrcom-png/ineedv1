
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /{document=**} {
      allow read, write: if false;
    }

    match /listings/{listingId} {
      allow read: if resource.data.status == 'publicado';

      allow create: if request.auth != null 
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.status == 'pendente';

      // ATUALIZAÇÃO RESTRITA: Permitir atualização pelo dono, mas IMPEDIR a mudança do status.
      // O usuário pode editar o conteúdo, mas não o estado de moderação.
      allow update: if request.auth != null 
                    && resource.data.authorId == request.auth.uid
                    && request.resource.data.status == resource.data.status; // Garante que o status não foi alterado

      allow delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
