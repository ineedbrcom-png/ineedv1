rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /listings/{listingId} {
      // Permite que qualquer pessoa consulte a lista de anúncios e leia um anúncio específico.
      allow list, get: if true;
      
      // Apenas usuários autenticados podem criar.
      allow create: if request.auth != null;

      // Apenas o autor pode editar ou apagar o anúncio.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    match /users/{userId} {
      // Qualquer um pode ler perfis de usuário.
      allow read: if true;

      // Apenas o próprio usuário pode criar, editar ou apagar seu perfil.
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /conversations/{conversationId} {
      // Regra geral: só participantes podem ler/escrever na conversa.
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        // Só participantes podem ler e criar mensagens.
        allow read, create: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        
        // Regras mais específicas para update. Ninguém pode apagar mensagens.
        allow update: if request.auth != null && 
                      request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow delete: if false;
      }
    }
  }
}
