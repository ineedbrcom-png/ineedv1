rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que qualquer pessoa leia os anúncios e perfis de usuário
    match /listings/{listingId} {
      allow read: if true;
      // Apenas usuários autenticados podem criar, e só o autor pode editar/apagar
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }

    match /users/{userId} {
      allow read: if true;
      // Apenas o próprio usuário pode criar, editar ou apagar seu perfil
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para subcoleções de conversas e mensagens
    match /conversations/{conversationId} {
      // Permite ler/escrever na conversa se o usuário for um dos participantes
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        // Permite ler/escrever mensagens se o usuário for um dos participantes da conversa pai
        allow read, write: if request.auth != null && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
    }
  }
}